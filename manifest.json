{
    "manifest_version": 3,
    "name": "TimeSync Pro",
    "version": "1.0",
    "permissions": [
        "cookies",
        "storage",
        "scripting",
        "activeTab",
        "clipboardWrite",
        "tabs",
        "alarms"
    ],
    "host_permissions": [
        "http://192.168.1.200:88/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://192.168.1.200:88/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_title": "TimeSync Pro",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png"
        }
    }
}